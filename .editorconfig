# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
quote_type = single

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Configuration files
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2